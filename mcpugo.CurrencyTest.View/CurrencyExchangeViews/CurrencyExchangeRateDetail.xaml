<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mcpugo.CurrencyTest.View.CurrencyExchangeViews" x:Class="mcpugo.CurrencyTest.View.CurrencyExchangeViews.CurrencyExchangeRateDetail" 
             mc:Ignorable="d" 
             x:Name="currencyExchangeRateDetailControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView 
            x:Name="lvwRateList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:CurrencyExchangeRateItem />
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="{Binding Path=CurrencyExchangeSelected.Base}" HorizontalAlignment="Left" Margin="488,322,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
